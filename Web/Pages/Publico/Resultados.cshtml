                                    <div class="form-group">
                                        <div class="pb_select-wrap">
                                            <select asp-for="Vm.FnTipoVehiculo" asp-items="@Model.ListaTiposVehiculo" class="form-control pb_height-50 reverse">
                                                <option value="" selected>Tipo</option>
                                            </select>
                                        </div>
                                    </div>
                                </p>
                                <p>
                                    <div class="form-group">
                                        <div class="pb_select-wrap">
                                            <select asp-for="Vm.FnMarcaId" asp-items="@Model.Marcas" class="form-control pb_height-50 reverse">
                                                <option value="" selected>Marca</option>
                                            </select>
                                        </div>
                                    </div>
                                </p>
                                <p>
                                    <div class="form-group">
                                        <div class="pb_select-wrap">
                                            <select asp-for="Vm.FnModeloId" class="form-control pb_height-50 reverse">
                                                <option value="" selected>Modelo</option>
                                            </select>
                                            <span asp-validation-for="Vm.FnModeloId" class="invalid-feedback"></span>
                                        </div>
                                    </div>
                                </p>
                                <p>
                                    <div class="form-group">
                                        <div class="pb_select-wrap">
                                            <select asp-for="Vm.FnVersionId" class="form-control pb_height-50 reverse">
                                                <option value="" selected>Version</option>
                                            </select>
                                        </div>
                                    </div>
                                </p>


                                <p>
                                    <div class="form-group">
                                        <div class="pb_select-wrap">
                                            <select asp-for="Vm.Combustible" asp-items="Model.ListaCombustible" class="form-control pb_height-50 reverse">
                                                <option value="" selected>Combustible</option>
                                            </select>
                                        </div>
                                    </div>
                                </p>

                                <p>
                                    <div class="form-group">
                                        <div class="pb_select-wrap">
                                            <select asp-for="Vm.Transmision" asp-items="Model.ListaTransmision" class="form-control pb_height-50 reverse">
                                                <option value="" selected>Transmision</option>
                                            </select>
                                        </div>
                                    </div>
                                </p>
                                <p>
                                    <div class="form-group">
                                        <label class="col-form-label">Cilindrada</label><br/>
                                        <div id="rangecilindrada" >
                                            <input asp-for="Vm.CilindradaMin"  />
                                            <input asp-for="Vm.CilindradaMax"/>
                                        </div>
                                    </div>
                                </p>

