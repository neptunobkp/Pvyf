@page "{handler?}"
@model Web.Pages.Publico.ResultadosModel
@{
    ViewData["Title"] = "Resultados";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}


<section class="pb_section pb-1" id="section-features">
    <div class="container-fluid px-4">
        <div class="row justify-content-center mb-5">
            <div class="row w-100 results-top-bar mb-2">
