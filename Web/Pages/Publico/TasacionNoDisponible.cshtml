@page
@model Web.Pages.Publico.TasacionNoDisponibleModel
@{
    ViewData["Title"] = "TasacionNoDisponible";
}



<section class="pb_cover_v3 text-left overflow-hidden jumbobotronblue" id="section-home" style="border-bottom: 15px solid #6ed9ff">
    <div class="container">
        <div class="row align-items-center justify-content-center mt-3">
            <div class="col-md-8">
                <div class="card bg-white rounded">
                    <div class="card-body text-center">
                        <div class="p-3">

                            <div class="alert alert-info">
                                <h2 class="mt-3 mb-3">
                                    No hemos encontrado datos para tu vehículo, pero no te preocupes, por favor déjanos todos tus datos y nos comunicaremos contigo ala brevedad.
                                </h2>
                            </div>
                        </div>
                        <div class="p-1">
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="col">
                    <div class="bg-white rounded-lg vehicle-contact-info">
                        <div class="row">
                            <div class="col text-left">
                                <form method="post">
                                    <h4 class="mb-1 mt-0 mb-3">Formulario Contacto</h4>
                                    <div class="form-group">
                                        <input class="form-control pb_height-50 reverse focus nombre" placeholder="NOMBRE" asp-for="SolicitudVm.Nombres">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control pb_height-50 reverse" placeholder="CORREO" asp-for="SolicitudVm.Correo">
                                    </div>
                                    <div class="form-group">
                                        <input class="form-control pb_height-50 reverse celular" placeholder="TELÉFONO" asp-for="SolicitudVm.Celular">
                                    </div>
                                    <div class="form-group">
                                        <textarea rows="9" class="form-control reverse" placeholder="MENSAJE" asp-for="SolicitudVm.Comentario"></textarea>
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-primary btn-lg btn-block pb_btn-pill  btn-shadow-blue" value="ENVIAR">
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts
    {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/jquery.mask.min.js"></script>
    <script>
        $(document).ready(function () {
            $('.focus :input').focus();
            $('.numeros').mask("#,##0", { reverse: true });
            $('.celular').mask('0 0000 0000');
            $('.nombre').mask('AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA', { 'translation': { A: { pattern: /[áéíóúÁÉÍÓÚñÑA-Za-z ]/ } } });
        });
    </script>

}
