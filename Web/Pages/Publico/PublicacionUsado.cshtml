@page "{id}"
@model Web.Pages.Publico.VehiculoModel
@{
    ViewData["Title"] = Model.Vm.Marca + " "+ Model.Vm.Modelo + " " + Model.Vm.Version + " " + Model.Vm.Anio + " - Vehículos Usados";
}

<section class="pb_section pb_slant-light vehicle-detail pb-3">

    <div class="container ">
        <div class="row">
            <div class="col-8">
                <div class="container bg-white rounded-lg vehicle-main-info mb-4">
                    <div class="row">
                        <div class="col text-left px-0">
                            <p class="vehicle-title">@Model.Vm.Marca @Model.Vm.Modelo @Model.Vm.Version @Model.Vm.Anio</p>
                        </div>
                        <div class="col text-right px-0">
                            <p class="vehicle-price">@Model.Vm.Precio CLP</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col text-left px-0">
                            <p class="vehicle-location">@Model.Vm.Ubicacion</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col px-0">
                            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                                <ol class="carousel-indicators">
                                    @foreach (var cadaFoto in Model.Vm.Fotos)
                                    {
                                        if (cadaFoto.Indice == 1)
                                        {
                                            <li data-target="#carouselExampleIndicators" data-slide-to="@cadaFoto.Indice" class="active"></li>
                                        }
                                        else
                                        {
                                            <li data-target="#carouselExampleIndicators" data-slide-to="@cadaFoto.Indice"></li>
                                        }
                                    }
                                </ol>
                                <div class="carousel-inner">
                                    @foreach (var cadaFoto in Model.Vm.Fotos)
                                    {
                                        if (cadaFoto.Indice == 1)
                                        {
                                            <div class="carousel-item active">
                                                <img class="d-block w-100" src="@cadaFoto.Data" alt="x">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="carousel-item">
                                                <img class="d-block w-100" src="@cadaFoto.Data" alt="y">
                                            </div>
                                        }
                                    }
                                </div>
                                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="row vehicle-features">
                        <div class="col">
                            <p>Tipo</p>
                            <p class="vehicle-features-value">@Model.Vm.TipoVehiculo</p>
                        </div>
                        <div class="col">
                            <p>Combustible</p>
                            <p class="vehicle-features-value">@Model.Vm.Combustible</p>
                        </div>
                        <div class="col">
                            <p>Transmisión</p>
                            <p class="vehicle-features-value">@Model.Vm.TipoTransmision</p>
                        </div>
                        <div class="col">
                            <p>Traccion</p>
                            <p class="vehicle-features-value">@Model.Vm.TipoTraccion</p>
                        </div>
                        <div class="col">
                            <p>Consumo</p>
                            <p class="vehicle-features-value">@Model.Vm.ConsumoCombustible</p>
                        </div>
                        <div class="col">
                            <p>Color</p>
                            <p class="vehicle-features-value">@Model.Vm.ColorVehiculo</p>
                        </div>
                    </div>
                </div>

                <div class="container bg-white rounded-lg vehicle-main-info mb-4">
                    <div class="row">
                        <div class="row">
                            <div class="col">
                                <h2>Descripción</h2>
                                <p class="pb_font-20">@Model.Vm.Descripcion</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col">
                <div class="bg-white rounded-lg vehicle-contact-info">
                    <div class="row">
                        <div class="col text-left">
                            <form method="post">
                                <h4 class="mb-1 mt-0 mb-3">¿Quieres el mejor precio? Contácta al Vendedor</h4>
                                <div class="form-group">
                                    <input class="form-control pb_height-50 reverse" placeholder="NOMBRE">
                                </div>
                                <div class="form-group">
                                    <input class="form-control pb_height-50 reverse" placeholder="CORREO">
                                </div>
                                <div class="form-group">
                                    <input class="form-control pb_height-50 reverse" placeholder="TELÉFONO">
                                </div>
                                <div class="form-group">
                                    <textarea rows="9" class="form-control reverse" placeholder="MENSAJE"></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary btn-lg btn-block pb_btn-pill  btn-shadow-blue" value="ENVIAR">
                                </div>
                            </form>
                            <div class="border-top pt-4 mt-4">
                                <h4 class="mb-1 mt-0 mb-3">Llama al Vendedor</h4>
                                <p class="font-weight-bold">@Model.Vm.NombreVendedor</p>
                                <p class="font-weight-bold">@Model.Vm.TelefonoVendedor</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
